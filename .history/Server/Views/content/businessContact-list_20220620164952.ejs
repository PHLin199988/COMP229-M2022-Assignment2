<div class="container">
    <h1>Business Contact List</h1>

    <div class="row">
        <div class="col">

            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus"></i> Add Contact</a>
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Contact Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email Address</th>
                        
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="businessContactList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < businessContacts.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= businessContacts[count].ContactName %></td>
                            <td><%= businessContacts[count].ContactNumber %></td>
                            <td><%= businessContacts[count].EmailAddress %></td>
                            <td class="text-center"><a href="/edit/<%= businessContacts[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
                            <td class="text-center"><a href="/delete/<%= businessContacts[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fa-solid fa-trash-can"></i> Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>